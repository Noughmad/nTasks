<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.noughmad.ntasks"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="16"/>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.noughmad.ntasks.TasksApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:theme="@android:style/Theme.Holo.Light"
            android:name="com.noughmad.ntasks.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
	        <intent-filter>
    	        <action android:name="android.intent.action.SEARCH" />
       		</intent-filter>
        	<meta-data android:name="android.app.searchable"
                   android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:theme="@android:style/Theme.Holo.Light"
            android:name="com.noughmad.ntasks.AccountActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:theme="@android:style/Theme.Holo.Light"
            android:name="com.noughmad.ntasks.ProjectDetailActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
        </activity>
        <provider
            android:name="TasksProvider"
          	android:authorities="com.noughmad.ntasks.TasksProvider" >
  			<path-permission android:pathPrefix="/search_suggest_query"
            	android:readPermission="android.permission.GLOBAL_SEARCH" />
		</provider>
    </application>

</manifest>