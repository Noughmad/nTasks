<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >
    
    <fragment
        android:id="@+id/project_list"
        android:name="com.noughmad.ntasks.ProjectListFragment"
        android:layout_width="200dp"
        android:layout_height="match_parent"
       	android:tag="project-list" />
    
    <fragment 
        android:id="@+id/tasks_fragment"
        android:name="com.noughmad.ntasks.TaskListFragment"
        android:layout_width="0dp"
        android:layout_height="600dp"
        android:layout_toRightOf="@id/project_list"
        android:layout_alignParentRight="true" />
    
    <fragment
        android:id="@+id/notes_fragment"
        android:name="com.noughmad.ntasks.NotesFragment"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_below="@id/tasks_fragment"
        android:layout_alignLeft="@id/tasks_fragment"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />
    
</RelativeLayout>